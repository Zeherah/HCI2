<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:gravity="center">

    <TextView
        android:text="Item name: "
        android:id="@+id/item_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25.0dip"
        android:textColor="#000000"
        android:layout_marginBottom="10.0dip"
        />
    <EditText
        android:id="@+id/item_name_editTxt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_name_tv"
        android:layout_marginBottom="10.0dip"/>
    <Spinner
        android:id="@+id/add_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:layout_marginBottom="20dip"
        android:layout_marginEnd="11dip"
        android:textSize="25dip"
        android:entries="@array/spinner_options"
        android:layout_below="@id/item_name_editTxt"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:background="@android:drawable/bottom_bar"
        android:paddingLeft="4.0dip"
        android:paddingTop="4.0dip"
        android:paddingRight="4.0dip"
        android:paddingBottom="1.0dip"
        android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:layout_below="@+id/add_spinner">

        <Button
            android:id="@+id/add_btn"
            android:layout_width="0.0dip" android:layout_height="fill_parent"
            android:text="Cancel"
            android:layout_weight="1.0" />

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="0.0dip" android:layout_height="fill_parent"
            android:text="Add"
            android:layout_weight="1.0" />

    </LinearLayout>
</RelativeLayout>